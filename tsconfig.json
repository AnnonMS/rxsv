{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["jest"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"]
}
