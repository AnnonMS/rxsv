{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["jest"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"]
}
