{
    "compilerOptions": {
        "target": "ES2018",
        "module": "esnext",
        "declaration": true,
        "strict": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["jest"],
        "lib": ["esnext", "dom"]
    },
    "include": ["@types/**/*", "packages/**/*"]
}
